<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/watchHistoryItemImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginRight="10dp"
        android:layout_weight="0"
        app:srcCompat="@android:drawable/ic_menu_help" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingRight="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_weight="1"
            android:gravity="center|start"
            android:paddingLeft="5dp">

            <TextView
                android:id="@+id/watchHistoryItemTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textColor="@color/main_text"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/watchHistoryItemInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:text="(Info)"
                android:textColor="@color/main_hint_text"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/watchHistoryItemResume"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_radio"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:text="▶ Продолжить"
                android:textColor="@color/main_text"
                android:textSize="20sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/watchHistoryItemDelete"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_radio"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:text="✖ Удалить"
                android:textColor="@color/main_text"
                android:textSize="20sp"
                app:backgroundTint="@null" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>